doRotate(deg)
  -webkit-transform rotate(deg)
  -moz-transform rotate(deg)
  -o-transform rotate(deg)
  -ms-transform rotate(deg)
  transform rotate(deg)

body
  color: #333
  font-family HelveticaNeue-Light, Helvetica, Arial, sans-serif
  font-weight 100

nav
  position fixed
  top 0px
  left 0px
  bottom 0px
  width 50px
  background #333
  h1
    margin-top 93px
    color #fff
    doRotate(-90deg)
  p
    font-weight 10
    margin-top 53px
    color #fff
    doRotate(-90deg)

section
  margin-left 50px

article
  display block
  width 333px
  height 300px
  float left
  margin-left 40px
  a
    text-decoration none
    color #333

.description
  display block
  -webkit-column-count 2
  -moz-column-count 2
  column-count 2
